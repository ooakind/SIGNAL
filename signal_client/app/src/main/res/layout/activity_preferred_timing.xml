<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferredTimingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Q. If you have some hard time, do you want to share your emotion immediately or not?"
        />

    <Button
        android:id="@+id/shareFast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Immediately"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shareSlow"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/shareSlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Immediately"
        android:layout_marginBottom="200dp"
        app:layout_constraintLeft_toRightOf="@+id/shareFast"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>